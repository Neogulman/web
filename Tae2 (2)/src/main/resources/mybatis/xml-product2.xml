	<update id="update-nick">
		update tb_product set
			name=#{name}
		where barcode=#{barcode}
	</update>
	
	<!--<update id="updateStatusAll">
		update tb_product set status='Y' where status='S'
	</update>-->
	
	<insert id="insert">
		insert into tb_product
		(
			barcode,
			name,
			locationX,
			locationY,
			stock,
			salesvolume,
			type,
			brand
		)
		values 
		(
			#{barcode},
			#{name},
			#{locationX},
			#{locationY},
			#{stock},
			#{salesvolume}, 
			#{type},
		    #{brand}
		 )
	</insert>

	<delete id="delete">
		delete from tb_product where barcode=#{barcode}
	</delete>
	

</mapper>