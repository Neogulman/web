<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xml-data-board">
	<select id="cnt" resultType="int">
		select 
			count(*) as cnt
		 from tb_data_board
		 where 1=1
		 
		 	<if test='idx > 0'>
		 		and idx=#{idx}
		 	</if>
		 	 <if test='s_day != ""'>
		 		and rdate between #{s_day} and #{e_day}
		 	</if>
		 	<if test='rdate != ""'>
		 		and rdate=#{rdate}
		 	</if>
		 	<if test='status != ""'>
		 		and status=#{status}
		 	</if>
		 	<if test='user_id != ""'>
		 		and user_id=#{user_id}
		 	</if>
		 	<if test='type != ""'>
		 		and type=#{type}
		 	</if>
		 	<if test='title != ""'>
		 		and title like CONCAT('%', #{title}, '%')
		 	</if>
		 	<if test='contents != ""'>
		 		and contents like CONCAT('%', #{contents}, '%')
		 	</if>
		 	<if test='org_file != ""'>
		 		and org_file like CONCAT('%', #{org_file}, '%')
		 	</if>
		 	
	</select>

	<select id="list" resultType="com.joheul.data.dto.TB_Data_Board">
		select 
			idx,
			title,
			contents,
			org_file,
			save_file,
			rdate,
			user_id,
			path,
			status,
			type
		 from 
		 	tb_data_board
		 where 1=1
		 	<if test='idx > 0'>
		 		and idx=#{idx}
		 	</if>
		 	<if test='s_day != ""'>
		 		and rdate between #{s_day} and #{e_day}
		 	</if>
		 	<if test='status != ""'>
		 		and status=#{status}
		 	</if>
		 	<if test='user_id != ""'>
		 		and user_id=#{user_id}
		 	</if>
		 	<if test='type != ""'>
		 		and type=#{type}
		 	</if>
		 	<if test='title != ""'>
		 		and title like CONCAT('%', #{title}, '%')
		 	</if>
		 	<if test='contents != ""'>
		 		and contents like CONCAT('%', #{contents}, '%')
		 	</if>
		 	<if test='org_file != ""'>
		 		and org_file like CONCAT('%', #{org_file}, '%')
		 	</if>
		 order by idx desc
		 limit #{sRow}, #{eRow}
	</select>
	
	<insert id="insert">
		insert into tb_data_board
		(
			title,
			contents,
			org_file,
			save_file,
			rdate,
			user_id,
			path,
			status,
			type
		)values(
			#{title},
			#{contents},
			#{org_file},
			#{save_file},
			now(),
			#{user_id},
			#{path},
			#{status},
			#{type}
		)
	</insert>
	
	<update id="update">
		update tb_data_board set
			name=#{name}
		where idx=#{idx}
	</update>

	<delete id="delete">
		update tb_data_board set status=#{status} where idx=#{idx}
	</delete>	
</mapper>