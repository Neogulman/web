<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xml-policy-group">
	<select id="max" resultType="int">
		select 
			max(grp_key)
		 from tb_policy_group
		 where 1=1
	</select>
	
	<select id="check" resultType="com.joheul.data.dto.TB_Policy_Group">
		select 
			grp_key,
			grp_name
		 from tb_policy_group
		 where 1=1
		 	
		 	<if test='grp_gubun != ""'>
		 		and grp_gubun=#{grp_gubun}
		 	</if>

		 	<if test='grp_name != ""'>
		 		and grp_name=#{grp_name}
		 	</if>
	</select>
	
	<select id="cnt" resultType="int">	
		select 
			count(*) as cnt
		 from tb_policy_group
		 where 1=1
		 
		 	<if test='grp_key > 0'>
		 		and grp_key=#{grp_key}
		 	</if>
		 	
		 	<if test='grp_gubun != ""'>
		 		and grp_gubun=#{grp_gubun}
		 	</if>

		 	<if test='grp_name != ""'>
		 		and grp_name like '%${grp_name}%'
		 	</if>
	</select>

	<select id="list" resultType="com.joheul.data.dto.TB_Policy_Group">
		select 
			grp_key,
			grp_gubun,
			case 
				when grp_gubun = "S" then 'IP'
				when grp_gubun = "P" then '프로그램'
				when grp_gubun = "C" then '명령어'
			end as grp_gubun_name,
			grp_name,
			DATE_FORMAT(rdate, '%Y/%m/%d') as rdate,
			DATE_FORMAT(mdate, '%Y/%m/%d') as mdate
		 from tb_policy_group
		 where 1=1
		 
		 	<if test='grp_key > 0'>
		 		and grp_key=#{grp_key}
		 	</if>
		 	
		 	<if test='grp_gubun != ""'>
		 		and grp_gubun=#{grp_gubun}
		 	</if>
		 	
		 	<if test='grp_name != ""'>
		 		and grp_name like '%${grp_name}%'
		 	</if>
		 	
		 order by grp_key desc
		 limit #{sRow}, #{eRow}
	</select>
	
	<select id="item-list" resultType="com.joheul.data.dto.TB_Policy_Group">
		select 
			grp_key,
			item_no
		 from tb_policy_group_item
		 where 1=1
		 
		 	<if test='grp_key > 0'>
		 		and grp_key=#{grp_key}
		 	</if>
		 	
		 	<if test='grp_key_str != ""'>
		 		and grp_key in (${grp_key_str})
		 	</if>
		 	
		 order by item_no asc
	</select>
	
	
	<insert id="insert">
		insert into tb_policy_group
		(
			grp_key,
			grp_gubun,
			grp_name,
			rdate,
			mdate
		)values(
			#{grp_key},
			#{grp_gubun},
			#{grp_name},
			now(),
			now()
		)
	</insert>
	
	<insert id="item-insert">
		insert into tb_policy_group_item
		(
			grp_key,
			item_no
		)values(
			#{grp_key},
			#{item_no}
		)
	</insert>
	
	<update id="update">
		update tb_policy_group set
			grp_name=#{grp_name},
			mdate=now()
		where grp_key=#{grp_key}
	</update>

	<delete id="delete">
		delete from tb_policy_group where grp_key=#{grp_key}
	</delete>

	<delete id="item-delete">
		delete from tb_policy_group_item where grp_key=#{grp_key}
	</delete>
</mapper>